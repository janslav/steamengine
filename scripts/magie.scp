[function f_customspell_delayed]//argv(0)-cislo kouzla, argv(1) - cil, argv(2) - pozice (je-li)
//src.sysmessage(src - <src.name>, kouzlo - <argv(0)>, cil - <argv(1)>, pozice - <argv(2)>)
safe(src.act=<argv(1)>) //zamereni
if (src.npc)
 src.events -e_npccustomcasting
 //timer=0
 if (src.act.distance<10)
  src.skill magery
 else
  src.attack(<src.act>)
 endif
else
 src.skill -1
endif
if !(src.isgm)
 //src.sysmessage(Kouzlim!)
 if(<a_resources[<argv(0)>]>) //jsou li vubec
  src.consume(<a_resources[<argv(0)>]>)
 endif
 src.stamina=<eval (<src.stamina>-<eval <a_staminause[<argv(0)>]>>)>
 if (src.ishungrymsg)
  src.f_fizzleefect
  src.consume(<a_scrollitem[<argv(0)>]>)
  src.mana=<eval (<src.mana>-<eval (<a_manause[<argv(0)>]>)/2>)>	
  return 1 
 endif
 if (f_circle_fizzle(<a_difficulty[<argv(0)>]>,<?src.<a_SKILL[<argv(0)>]>?>)) //overi narocnost kouzla a potrebu magery
  src.f_fizzleefect
  src.consume(<a_scrollitem[<argv(0)>]>)
  src.mana=<eval (<src.mana>-<eval (<a_manause[<argv(0)>]>)/2>)>
  return 1
 endif
 src.mana=<eval (<src.mana>-<eval a_MANAUSE[<argv(0)>]>)>
 src.f_spelldone(<argv(0)>) //pro setreni many
 src.tag(scrollcast,"")
endif
if (<eval a_flags[<argv(0)>]>&csflag_mass) //overit flagy (masove kouzlo), v tom pripade take mame <argv(2)> - pozici
 var(distanceuid,<eval <src.act>>) //pro vzdalenost od cile
 if !(<src.act>) //nemame cil (char) - kouzlim na zem
  src.newitemsafe(i_bag)
  lastnew.p=<src.tag.targp> //targp - pouze pri targon_ground
  var(distanceuid,<lastnew>) //vzdalenost od pomocneho itemu
  arg(removeitem,1)
 endif 
 sector.allchars f_a_massspell_dist(<argv(0)>,<src.calcspelleffect(<argv(0)>)>,<src.uid>,<a_mass_distance[<argv(0)>]>,<eval <eval a_flags[<argv(0)>]>&csflag_noLOS>)
 if (<arg(removeitem)>)
  finduid(var(distanceuid)).remove
  var(distanceuid,"")
 endif
 src.consume(<a_scrollitem[<argv(0)>]>)
 return 0
endif
if (<src.act>) //mame cil (char)
 finduid(src.act).dospellcustom(<argv(0)>,<src.calcspelleffect(<argv(0)>)>,<src>) 
 src.consume(<a_scrollitem[<argv(0)>]>)
else
 src.dospellcustom(<argv(0)>,<src.calcspelleffect(<argv(0)>)>,<src>)
 src.consume(<a_scrollitem[<argv(0)>]>)
endif
return 0

