[function manashield] //argv(0) - ubrano, argv(1) - flagy, argv(2) - pro pøípad mindblastu jedine (jeho spellpower)
if(<mana>) //mame-li vubec manu
 if(safe(<argv(2)>)) //mindblast
  //say(je to mindblast!)
  arg(mb_damage,<eval (src.int-int)*promilerange(<argv(2)>,<s_mind_blast.effect>)>)
  arg(damage,<eval((<arg(mb_damage)>+500)/1000)>)
  //say(MB damage <arg(damage)>)
  arg(zbyde,<eval (<mana>-<arg(damage)>)>)
  if(<arg(zbyde)> > 0) //vejdu se s dmg do many
   //say(zbyde: <arg(zbyde)>)
   effect_manashield_kryti
   mana=<arg(zbyde)>
   return 1
  else //uz se nevejdu a jsem na nule nebo v zaporu
   arg(koupis,<eval (<arg(damage)>-<mana>)>) //mana jeste neco (pripadne nic - kdyz to byla nula) nezachranila
   effect_manashield_kryti
   sfx(511) //magic unlock
   mana=0  
   //say(koupim <arg(koupis)>) 
   findid(i_a_mana_shield).remove
   damage(<arg(koupis)>,dam_magic|dam_god)   
   return 1
  endif
 endif //tolik mindblast
 //sysmessage(neni mindblast!)
 if(<eval (<mana>-<argv(0)>)> > 0) //vejdu se do many
   //kermel.sysmessage(<name> vejdu do many!, mana: <mana> dmg: <argv(0)>)
   effect_manashield_kryti
   mana=<eval (<mana>-<argv(0)>)>
   //kermel.sysmessage(<name> nova mana: <mana>)
   var(manashield_used,1) //pro pozdejsi pouziti
   var(koupis,0)
   return 1
 else //do many se nevejdu  
   //kermel.sysmessage(<name> nevejdu do many! ,dmg: <argv(0)>, mana: <mana>)
   effect_manashield_kryti
   sfx(511) //untrap
   var(koupis,<eval (<argv(0)>-<mana>)>) //neco nam mana pripadne zachrani
   mana=0   
   var(manashield_used,1)
   //kermel.sysmessage(<name> koupim - <var(koupis)>)
   //kermel.sysmessage(<name> nova mana: <mana>)
   findid(i_a_mana_shield).remove
   return 1
 endif
else //od pocatku nebyla mana
 findid(i_a_mana_shield).remove
 return 1
endif

