findid(i_poison_delay).remove
events -e_poison_imunity

[ITEMDEF i_poison_delay]
NAME=Delay poison imunity
ID=i_handr_1
TYPE=T_EQ_SCRIPT

on=@equip
cont.events(+e_poison_imunity)
cont.tag(resist_poison,<eval cont.tag(resist_poison)+1000>)

ON=@Timer
//pro jistotu i zde
cont.events(-e_poison_imunity)
cont.tag(resist_poison,<eval cont.tag(resist_poison)-1000>)
if (<cont.tag(resist_poison)> < 1)
 cont.tag(resist_poison,"")
endif

remove
return 1
	
on=@unequip	
cont.events(-e_poison_imunity)
cont.tag(resist_poison,<eval cont.tag(resist_poison)-1000>)
if (<cont.tag(resist_poison)> < 1)
  cont.tag(resist_poison,"")
endif

